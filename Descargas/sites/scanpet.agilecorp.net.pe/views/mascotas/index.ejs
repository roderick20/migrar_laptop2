<div class="container-fluid p-0">

    <h1 class="h3 mb-3">Mascotas</h1>

    <div class="row">

        <div class="col-12">
            <div class="card">
                <div class="card-header">
                </div>
                <div class="card-body h-100">

                    <a href="/mascotas/create" class="btn btn-primary mb-2"> <i class="fa-solid fa-plus"></i> Agregar Mascota</a>

                    <table class="table table-bordered table-sm">
                        <thead>
                            <tr>
                                <th>
                                    Nombre
                                </th>
                                <th>
                                    Raza
                                </th>
                                <th>
                                    Sexo
                                </th>
                                <th>
                                    Color
                                </th>
                                <th>

                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            <% list.forEach(function(item) { %>
                                <tr>
                                    <td><%= item.Nombre %></td>
                                    <td><%= item.Raza %></td>
                                    <td><%= item.Sexo %></td>
                                    <td><%= item.Color %></td>
                                    <td></td>
                                </tr>                                
                                <% }); %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>