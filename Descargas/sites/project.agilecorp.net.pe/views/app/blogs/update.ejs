<div class="card border rounded-3">
  <div class="card-body">

<form action="/blogs/update" method="post">
  <input type="hidden" id="id" name="id" value="<%= blog._id.toString() %>">
  <div class="form-group">
    <label for="name">Titúlo</label>
    <input type="text" class="form-control" id="name" name="name" value="<%= blog.name %>">
  </div>
  <div class="form-group">
    <label for="name">Plataforma</label>
    <select class="form-control" id="platform" name="platform">
      <option value="Node">Node</option>
      <option value="C#">C#</option>
      <option value="SharePoint">SharePoint</option>
      <option value="JavaScript">JavaScript</option>
      <option value="React">React</option>
    </select>
  </div>
  <div class="form-group">
    <label for="name">Lenguaje</label>
    
  <div class="form-group">
    <label for="description">Descripción</label>
    <textarea id="description" name="description" ><%= blog.description %></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Grabar</button>
</form>
</div>
</div>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>

<script>
  $(document).ready(function() {
    $('#description').summernote({
      tabsize: 2,
      height: 400
    });
  });
</script>