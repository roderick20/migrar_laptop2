<h1 class="h3 mb-3">CompanÃ­as</h1>

<div class="row">
    <div class="col-12">
        <div class="card border rounded-3">
            <div class="card-body" style="min-height:500px">

                <% if (error != '') { %>
                    <div class="text-danger"><%= error %>"</div>
                    <% } %>

                <table id="tblList" class="table table-sm table-bordered align-middle table-hover">
                    <thead>
                        <tr>
                            <th>
                                Nombre
                            </th>                            
                            <th  style="width: 1%;">
                                Habilitado
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(companies != null) { %>
                        <% companies.forEach(function(company) { %>
                            <tr>
                                <td><%= company.Name %></td>
                                <td  class="text-center"><%- company.Enabled ? '<i class="fa-solid fa-circle-check text-success"></i>' : '<i class="fa-solid fa-circle-xmark text-danger"></i>' %></td>
                                <td style="width:1%;">
                                    <div class="dropdown">
                                    <a class="btn btn-sm btn-primary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v fa-lg"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a href="/companies/update/<%= company.UniqueId %>" class="dropdown-item text-primary"><i class="fa-solid fa-pen-to-square"></i> Editar </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a href="/companies/delete/<%= company.UniqueId %>/" class="dropdown-item text-danger"><i class="fa-solid fa-trash"></i> Eliminar </a></li>
                                    </ul>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

