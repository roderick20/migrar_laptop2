<h1 class="h3 mb-3">Programas</h1>

<div class="row">
    <div class="col-12">
        <div class="card border rounded-3">
            <div class="card-body" style="min-height:500px">
                <% if (error != '') { %>
                    <div class="text-danger"><%= error %>"</div>
                    <% } %>
                <table id="tblList" class="table table-sm table-bordered align-middle table-hover">
                    <thead>
                        <tr>
                            <th nowrap>
                                Nombre
                            </th>                            
                            <th nowrap>
                                AÃ±o
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if(program != null) { %>
                        <% program.forEach(function(program) { %>
                            <tr>
                                <td><%= program.Name %></td>
                                <td > <%= program.Year %> </td>
                                <td style="width:1%;">
                                    <div class="dropdown">
                                    <a class="btn btn-sm btn-primary" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-v fa-lg"></i></a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li><a href="/programs/update/<%= program.UniqueId %>" class="dropdown-item text-primary"><i class="fa-solid fa-pen-to-square"></i> Editar </a></li>
                                        <li><hr class="dropdown-divider"></li>
                                        <li><a href="/programs/delete/<%= program.UniqueId %>/" class="dropdown-item text-danger"><i class="fa-solid fa-trash"></i> Eliminar </a></li>
                                    </ul>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

