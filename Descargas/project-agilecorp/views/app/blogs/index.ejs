<div class="row">
  <div class="col-md-6 text-left">
    <h4>Blog</h4>
  </div>
  <div class="col-md-6" style="text-align: right;">
    <a href="/blogs/create" class="btn btn-sm btn-primary"><i class="fa-solid fa-plus"></i> Agregar</a>
  </div>
</div>
<div class="card border rounded-3">
  <div class="card-body">
<table class="table table-sm table-bordered table-hover">
  <thead>
    <tr>
      <th>Tílulo</th>
      <td>
        Plataforma
      </td>     
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% blogs.forEach((item) => { %>
    <tr>
      <td>
        <%= item.name %>
      </td>
      <td>
        <%= item.platform %>
      </td>
      <td style="width: 1%;" nowrap>
        <a href="/blogs/read/<%= item._id.toString() %>"><i class="fa-solid fa-square-poll-vertical"></i></a>
      </td>     
      <td style="width: 1%;" nowrap>
        <a href="/blogs/update/<%= item._id.toString() %>"><i class="fa-solid fa-pen-to-square"></i></a>
        <a href="/blogs/delete/<%= item._id.toString() %>" class="text-danger" onclick="window.confirm('¿Deseas eliminar?') ? '' : event.preventDefault();"><i class="fa-solid fa-trash"></i></a>
      </td>
    </tr>
    <% })%>
  </tbody>
</table>
</div>
</div>