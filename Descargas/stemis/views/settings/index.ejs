<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="d-flex align-items-center mb-4 d-lg-none">
                <button class="border-0 bg-transparent" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <i class="btn btn-primary fw-bold fa-solid fa-sliders"></i>
                    <span class="h6 mb-0 fw-bold d-lg-none ms-2">Settings</span>
                </button>
            </div>
            <nav class="navbar navbar-light navbar-expand-lg mx-0">
                <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar">
                    <div class="offcanvas-header">
                        <button type="button" class="btn-close text-reset ms-auto" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                    </div>
                    <div class="offcanvas-body p-0">
                        <div class="card w-100">
                            <div class="card-body">
                                <ul class="nav nav-tabs nav-pills nav-pills-soft flex-column fw-bold gap-2 border-0">
                                    <li class="nav-item" data-bs-dismiss="offcanvas">
                                        <a class="nav-link d-flex mb-0 active" href="#nav-setting-tab-1" data-bs-toggle="tab"> <i class="fa-solid fa-gear me-2 h-20px mt-1"></i><span>Configuración </span></a>
                                    </li>
                                    <li class="nav-item" data-bs-dismiss="offcanvas">
                                        <a class="nav-link d-flex mb-0" href="#nav-setting-tab-2" data-bs-toggle="tab"> <i class="fa-solid fa-image me-2 h-20px mt-1"></i><span>Imagenes </span></a>
                                    </li>     
                                    <li class="nav-item" data-bs-dismiss="offcanvas">
                                        <a class="nav-link d-flex mb-0" href="#nav-setting-tab-3" data-bs-toggle="tab"> <i class="fa-solid fa-paintbrush me-2 h-20px mt-1"></i><span>Estilos </span></a>
                                    </li>
                                </ul>
                            </div>                        
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    
        <div class="col-lg-9 vstack gap-4">
            <div class="tab-content py-0 mb-0">
                <div class="tab-pane show active fade" id="nav-setting-tab-1">
                    <div class="card border rounded-3">
                        <div class="card-header  border-bottom p-3">
                            <div class="d-sm-flex justify-content-between align-items-center">
                                <h5 class="mb-2 mb-sm-0">Configuración</h5>
                            </div>
                        </div>
                        <div class="card-body" style="min-height:500px">
                            <div class="table-responsive border-0">
                                <table id="listTable" class="table align-middle mb-0 table-hover table-shrink">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="border-0 rounded-start">
                                                Título
                                            </th>
                                            <th>
                                                Valor
                                            </th>
                                            <th scope="col" class="border-0 rounded-end"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% settingslistConf.forEach(item => { %>
                                            <tr>
                                                <td>
                                                    <%= item.Title %>
                                                </td>
                                                <td>
                                                    <%= item.Value %>
                                                </td>
                                                <td style="width: 1%;white-space: nowrap;">
                                                    <a class="text-primary" href="/admin/settings/edit/<%= item.UniqueId %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a> 
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
    
                </div>
                <div class="tab-pane fade" id="nav-setting-tab-2">
                    <div class="card border rounded-3">
                        <div class="card-header  border-bottom p-3">
                            <div class="d-sm-flex justify-content-between align-items-center">
                                <h5 class="mb-2 mb-sm-0">Imagenes</h5>                   
                            </div>
                        </div>
                        <div class="card-body" style="min-height:500px">
                            <div class="table-responsive border-0">
                                <table id="listTable" class="table align-middle mb-0 table-hover table-shrink">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="border-0 rounded-start">
                                                Título
                                            </th>
                                            <th>
                                                Valor
                                            </th>
                                            <th scope="col" class="border-0 rounded-end"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                            <% settingslistImage.forEach(item => { %>
                                            <tr>
                                                <td>
                                                    <%= item.Title %>
                                                </td>
                                                <td>
                                                    <img src="/settings/images/logo_color.png" class="img-fluid" style="max-width:100px;" />
                                                </td>
                                                <td style="width: 1%;white-space: nowrap;">
                                                    <a class="text-primary" href="/admin/settings/edit/<%= item.UniqueId %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
    
                </div>
                <div class="tab-pane fade" id="nav-setting-tab-3">
                    <div class="card border rounded-3">
                        <div class="card-header  border-bottom p-3">
                            <div class="d-sm-flex justify-content-between align-items-center">
                                <h5 class="mb-2 mb-sm-0">Estilos</h5>
                            </div>
                        </div>
                        <div class="card-body" style="min-height:500px">
                            <div class="table-responsive border-0">
                                <table id="listTable" class="table align-middle mb-0 table-hover table-shrink">
                                    <thead class="table-dark">
                                        <tr>
                                            <th scope="col" class="border-0 rounded-start">
                                                Título
                                            </th>                                        
                                            <th>
                                                Valor
                                            </th>
                                            <th scope="col" class="border-0 rounded-end"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% settingslistStyle.forEach(item => { %>
                                            <tr>
                                                <td>
                                                    <%= item.Title %>
                                                </td>
                                                <td>
                                                    <%= item.Value %>
                                                </td>
                                                <td style="width: 1%;white-space: nowrap;">
                                                    <a class="text-primary" href="/admin/settings/edit/<%= item.UniqueId %>"><i class="fa-solid fa-pen-to-square"></i> Editar</a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>    